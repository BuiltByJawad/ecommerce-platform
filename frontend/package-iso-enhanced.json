{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "audit:security": "npm audit --audit-level moderate",
    "audit:lighthouse": "lhci autorun",
    "test:a11y": "axe-core --dir ./src",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "@stripe/stripe-js": "^5.5.0",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.7.9",
    "flowbite": "^3.1.2",
    "formik": "^2.4.6",
    "framer-motion": "^12.0.1",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.473.0",
    "next": "15.1.6",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-confetti": "^6.2.2",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.1",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-select": "^5.10.1",
    "react-toastify": "^11.0.3",
    "recharts": "^2.15.0",
    "redux-persist": "^6.0.0",
    "sonner": "^2.0.4",
    "sslcommerz-lts": "^1.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-security": "^3.0.1",
    
    "prettier": "^3.3.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "prettier-plugin-tailwindcss": "^0.6.8",
    
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    
    "@axe-core/cli": "^4.10.0",
    "@lhci/cli": "^0.14.0",
    "bundle-analyzer": "^4.2.1",
    
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}